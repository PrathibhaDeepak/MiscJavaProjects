package arrayPack;

import java.util.Scanner;

public class ArrPrac1 {

	public static void main(String[] args) {
		int sum =0;
		int limit;
		
		System.out.println("Enter values: ");
		Scanner input = new Scanner(System.in);
		limit = input.nextInt();
		
		for(int i=0; i<limit; i++) {
			sum = sum + i;
			
		}
		System.out.printf("Sum is: ", sum);
		
	}

	
	

}
