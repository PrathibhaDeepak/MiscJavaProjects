import java.util.Scanner;

public class basicSalesPrice {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		//Declare required variables
		double grade, salesPrice, basic;
		
		//Get user input
		Scanner in = new Scanner(System.in);
		System.out.print("Enter basic sales price: ");
		System.out.print("Enter the grade: ");
		grade = in.nextDouble();
		salesPrice = in.nextDouble();
		
		
		//Calculation
		
		if(grade==1) {
			
			System.out.printf("Basic sales price %f ", salesPrice);
			
		}
		else if(grade==2) {
			basic = salesPrice+(10/100.0*salesPrice);
			System.out.printf("Basic sales for grade two %2f",salesPrice);
		}
		
		//Display result
	}
 
}
