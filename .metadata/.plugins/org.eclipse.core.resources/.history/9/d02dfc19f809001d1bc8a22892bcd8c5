package helloLearn;

public class Assessment_Array {

	public static void main(String[] args) {
		int [] ant = {1,2,3,4,5};
		
		for(int i=0; i<ant.length; i++) { 
			if(ant[i]%2==0) {
				System.out.println("It is an Even number:" + ant[i]);
						
			//System.out.print(ant[i] +"\t");
			//System.out.println("\n");
			//for(int odd=1; odd<=ant.length; odd++) {
				}
			else {
				System.out.println("Odd Number: "+ ant[i] );
				
		}
			
		
		}}			
				
	
		



	}
