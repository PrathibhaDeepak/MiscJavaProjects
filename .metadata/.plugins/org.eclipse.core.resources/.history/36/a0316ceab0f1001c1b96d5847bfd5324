import java.util.Scanner;

public class ifElse {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		double Incentive,Salesamount;
		
		Scanner in = new Scanner(System.in);
		System.out.print("Enter the sales amount:  ");

		Salesamount = in.nextDouble();
		//Calculation
		Incentive = Salesamount*(10/100.0);
		 System.out.printf("Incentive is %2f " , Incentive);
		
		
		if(Incentive>=10000) {
			System.out.println("You will get incentive");
		}
		else {
			System.out.println("No incentive availabel");
		}
	}

}
